<script src="https://rawcdn.githack.com/nextapps-de/flexsearch/0.8.2/dist/flexsearch.bundle.min.js"></script>

<div class="search-layout">
    <!-- Facet Sidebar -->
    <aside class="facet-sidebar">
        <h2>Filter Results</h2>

        <!-- Date Range Filter -->
        <div class="facet-section">
            <div class="facet-header collapsed" data-toggle="date-range" onclick="this.classList.toggle('collapsed');this.nextElementSibling.classList.toggle('collapsed')">Date Range</div>
            <div class="facet-content collapsed" id="date-range">
                <div class="date-range-inputs">
                    <label>
                        From year
                        <input type="number" id="date-from" placeholder="e.g. -100">
                    </label>
                    <label>
                        To year
                        <input type="number" id="date-to" placeholder="e.g. 600">
                    </label>
                    <small class="date-hint">Use negative numbers for BCE</small>
                </div>
                <button class="clear-dates-btn" id="clear-dates">Clear Dates</button>
            </div>
        </div>

        <!-- Dynamic Facets -->
        <div id="facets-container"></div>

        <div class="filter-actions">
            <button id="clear-all-filters">Clear All Filters</button>
        </div>
    </aside>

    <!-- Main Search Area -->
    <div class="search-main">
        <div class="search-input-container">
            <input type="text" id="search-input" placeholder="Search inscriptions..." autocomplete="off">
            <button id="search-button">Search</button>
        </div>

        <div id="search-progress">
            <p class="progress-text" id="progress-text">Loading search index...</p>
        </div>

        <div id="active-filters"></div>

        <div id="search-results" style="display:none;">
            <p id="search-status"></p>
            <ul id="results-list"></ul>
        </div>
    </div>
</div>

<script src="/assets/js/search.js"></script>
<script>
    EfesSearch.init({
        searchDataUrl: '../../search-data',
        facets: {
            material:   { label: 'Material' },
            objectType: { label: 'Object Type' },
            textType:   { label: 'Text Type' },
            language:   { label: 'Language' },
            findspot:   { label: 'Findspot' },
            repository: { label: 'Repository' },
        },
        expandedFacets: ['material', 'objectType', 'language', 'findspot'],
        resultUrl: (doc) => '../../en/inscriptions/' + doc.documentId + '.html',
        resultDetails: ['origDate', 'findspot', 'material'],
    });
</script>

